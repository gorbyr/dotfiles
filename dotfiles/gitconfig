[alias]
	current-branch-name = !git branch | grep -e '^\\* ' | sed -e 's/^\\* //g'
	force-pull = !git fetch && git reset --hard origin/$(git current-branch-name)
	logg = log --graph --pretty=oneline
[color]
	ui = auto
[commit]
	template = ~/.gitmessage
[core]
	autocrlf = input
	editor = emacs
	excludesfile = ~/.gitignore_global
	ignorecase = false
	symlinks = true
[init]
	defaultBranch = master
[merge]
	ff = false
[pull]
	ff = only
[push]
	default = simple
