[alias]
    current-branch-name = !git branch | grep -e '^\\* ' | sed -e 's/^\\* //g'
    commit-empty-message = commit --allow-empty-message -m ''
    force-pull = !git fetch && git reset --hard origin/$(git current-branch-name)
    logg = log --graph --pretty=oneline
[color]
    ui = auto
[commit]
    template = ~/.gitmessage
[core]
    autocrlf = input
    editor = emacs
    excludesfile = ~/.gitignore_global
    ignorecase = false
    symlinks = true
[init]
    defaultBranch = main
[merge]
    ff = false
[pull]
    ff = only
[push]
    default = simple
[user]
    email = 29905556+gorbyr@users.noreply.github.com
    name = gorbyr
